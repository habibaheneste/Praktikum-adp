opsi = int(input("Ketik 1, 2, 3: "))

if opsi == 1:
	kode = input("Masukkan Kode: ")
	n = int(input("Jumlah Pesanan: "))
	if kode == "PA" :
		print ("- - - - - Struk - - - - - -")
		print ("Nama Pesanan: Pecal Ayam")
		print ("Harga: Rp.12.000,00")
		print (f"Total Harga: {n*12000}")
		print ("- - - - Terima Kasih - - - -")
