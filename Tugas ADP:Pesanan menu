		print ("- - - - - Struk - - - - - -")
		print ("Nama Pesanan: Nasi Goreng")
		print ("Harga: Rp.10.000,00")
		print (f"Total Harga: {n*10000}")
		print ("- - - - Terima Kasih - - - -")
	elif kode == "ST":
		print ("- - - - - Struk - - - - - -")
		print ("Nama Pesanan: Soto")
		print ("Harga: Rp.10.000,00")
		print (f"Total Harga: {n*10000}")
		print ("- - - - Terima Kasih - - - -")
	else :
		print ("Kode Pesanan Tidak Valid")			

